{
  "name": "@hexium/claude-toolkit",
  "version": "1.4.0",
  "description": "Claude toolkit for Hexium team",
  "bin": {
    "global-install": "bin/global-install.js",
    "project-install": "bin/project-install.js"
  },
  "scripts": {
