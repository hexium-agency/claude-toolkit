    "format:check": "prettier --check .",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "postinstall": "node bin/project-install.js",
    "prepublishOnly": "npm test",
    "test": "node scripts/validate.js",
    "prepare": "husky"
